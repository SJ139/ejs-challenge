<!DOCTYPE html>
<%- include("partials/header"); -%>

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Blog Site</title>
  </head>
  <body>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>

      <% posts.forEach(function(post){ %>
        <h1><%= post.title%> </h1>
        <p>
          <%=post.content.substring(0,100) + " ..." %>
          <a href="/posts/<%=post.title%>">read more</a>
        </p>
      <% }); %>

  </body>
  <%- include("partials/footer"); -%>
</html>
